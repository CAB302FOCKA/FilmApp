<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.filmapp.HelloController"
      prefWidth="600.0" prefHeight="800.0" spacing="10">
    <AnchorPane prefHeight="41.0" prefWidth="600.0">
        <Label text="FOCKA Films" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0"/>
    </AnchorPane>
    <HBox prefHeight="40.0" spacing="10" alignment="CENTER">
        <Button text="Menu"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Search"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Account"/>
    </HBox>
    <Label text="Watchlist:" />
    <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" pannable="true">
        <GridPane fx:id="movieContainer" hgap="20" vgap="20" style="-fx-padding: 10;">
            <columnConstraints>
                <ColumnConstraints percentWidth="33" />
                <ColumnConstraints percentWidth="33" />
                <ColumnConstraints percentWidth="33" />
            </columnConstraints>
        </GridPane>
    </ScrollPane>

</VBox>
