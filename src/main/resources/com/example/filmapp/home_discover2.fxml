<VBox prefHeight="1080.0" prefWidth="1920.0" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.filmapp.HomeDiscoverController">

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="settingsBtn" text="âš™" onAction="#handleSettingsButton" />

        <Region HBox.hgrow="ALWAYS" />
        <Button text="Home" />
        <Button fx:id="searchBtn" onAction="#handleSearchButton" text="Search" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="account" text="ðŸ‘¤" onAction="#handleAccountButton"/>
    </HBox>

    <HBox prefHeight="1000.0" prefWidth="1920.0" spacing="30">
