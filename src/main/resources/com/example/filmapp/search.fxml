<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.filmapp.SearchController">
   <MenuBar>
     <menus>
       <Menu mnemonicParsing="false" text="File">
         <items>
           <MenuItem mnemonicParsing="false" text="Close" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Edit">
         <items>
           <MenuItem mnemonicParsing="false" text="Delete" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Help">
         <items>
           <MenuItem mnemonicParsing="false" text="About" />
         </items>
       </Menu>
     </menus>
   </MenuBar>
   <Label fx:id="queryLabel">
      <font>
         <Font size="32.0" />
      </font>
      <padding>
         <Insets bottom="15.0" left="30.0" top="15.0" />
      </padding>
   </Label>
   <HBox prefHeight="0.0" prefWidth="1920.0" spacing="20.0">
      <children>
         <MenuButton mnemonicParsing="false" text="MenuButton">
           <items>
             <MenuItem mnemonicParsing="false" text="Movies &amp; TV" />
             <MenuItem mnemonicParsing="false" text="Action 2" />
           </items>
         </MenuButton>
         <TextField fx:id="queryTextField" promptText="Search..." />
         <Button fx:id="searchButton" mnemonicParsing="false" text="Search" onAction="#handleSearchButtonAction"/>
         <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" nodeOrientation="RIGHT_TO_LEFT" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
            <children>
               <MenuButton mnemonicParsing="false" text="MenuButton">
                 <items>
                   <MenuItem mnemonicParsing="false" text="Action 1" />
                   <MenuItem mnemonicParsing="false" text="Action 2" />
                 </items>
               </MenuButton>
            </children>
         </Pane>
      </children>
      <padding>
         <Insets left="30.0" right="30.0" />
      </padding>
   </HBox>
   <FlowPane fx:id="flowPane" hgap="30.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="1080.0" prefWidth="1920.0" vgap="30.0">
      <children>
      </children>
      <padding>
         <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
      </padding>
   </FlowPane>
</VBox>
