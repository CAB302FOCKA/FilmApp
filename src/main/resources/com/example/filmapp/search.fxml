<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.filmapp.controller.SearchController">
   <Button fx:id="handleBackController" mnemonicParsing="false" text="Back" onAction="#handleBackController"/>
   <Label fx:id="queryLabel">
      <font>
         <Font name="System Bold" size="32.0" />
      </font>
      <padding>
         <Insets bottom="15.0" left="30.0" top="15.0" />
      </padding>
   </Label>
   <HBox prefHeight="0.0" prefWidth="1920.0" spacing="20.0">
      <children>
         <ComboBox fx:id="filterComboBox" prefWidth="150.0" />
         <TextField fx:id="queryTextField" promptText="Search..." />
         <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearchButtonAction" text="Search" />
         <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" nodeOrientation="RIGHT_TO_LEFT" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
      </children>
      <padding>
         <Insets left="30.0" right="30.0" />
      </padding>
   </HBox>
   <FlowPane fx:id="flowPane" hgap="30.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="1080.0" prefWidth="1920.0" vgap="30.0">
      <padding>
         <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
      </padding>
   </FlowPane>
</VBox>
